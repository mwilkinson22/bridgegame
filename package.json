{
	"name": "bridgegame",
	"version": "0.0.1",
	"description": "A daily bridge crossing trivia game",
	"main": "index.js",
	"scripts": {
		"start": "node dist/build/bundle.js",
		"build": "NODE_ENV=production npm-run-all --parallel build:*",
		"build:css": "sass src/client/stylesheets/styles.scss:dist/public/stylesheet.css --no-source-map --style=compressed",
		"build:client": "webpack --config webpack.client.js --mode=production",
		"build:server": "webpack --config webpack.server.js --mode=production",
		"dev": "npm-run-all --parallel dev:*",
		"dev:css": "sass src/client/stylesheets/styles.scss:dist/public/stylesheet.css --watch",
		"dev:server": "nodemon --watch dist/build dist/build/bundle.js",
		"dev:build-server": "webpack --config webpack.server.js --watch --mode=development",
		"dev:build-client": "webpack --config webpack.client.js --watch --mode=development"
	},
	"author": "Mark Wilkinson",
	"license": "ISC",
	"dependencies": {
		"@babel/polyfill": "^7.12.1",
		"axios": "^1.6.2",
		"es6-promise": "^4.2.8",
		"express": "^4.18.2",
		"mongoose": "^8.1.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router": "^6.21.3",
		"react-router-dom": "^6.21.3"
	},
	"devDependencies": {
		"@babel/core": "^7.23.9",
		"@types/express": "^4.17.21",
		"@types/node": "^20.10.4",
		"@types/react": "^18.2.42",
		"@types/react-dom": "^18.2.18",
		"@types/webpack-node-externals": "^3.0.4",
		"babel": "^6.23.0",
		"babel-loader": "^9.1.3",
		"copy-webpack-plugin": "^12.0.2",
		"nodemon": "^3.0.3",
		"npm-run-all": "^4.1.5",
		"sass": "^1.70.0",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^4.15.1",
		"webpack-merge": "^5.10.0",
		"webpack-node-externals": "^3.0.0"
	}
}
